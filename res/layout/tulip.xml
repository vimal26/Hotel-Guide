<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout 
   
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Set_Wall" >







    <TextView
        android:id="@+id/tv1"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:text="Tulip INN Lucknow"
        android:textSize="25sp"
        android:textStyle="bold|italic"
         android:gravity="center_horizontal"
        />



<LinearLayout
    android:id="@+id/ll2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        
        android:src="@drawable/tulipb" android:layout_gravity="center"/>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/tulipb" android:padding="2dp"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/tulipbed" android:padding="0.2dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/tuliphall" android:padding="2dp"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/tulipmeetng" android:padding="2dp"/>
            
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/tuliprecep" android:padding="2dp"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>

<TextView
    android:id="@+id/tv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/ll2"
    android:layout_marginTop="10dp"
    android:text="@string/detail13"
    android:textStyle="normal|italic" />

<Button
    android:id="@+id/tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tv1"
    android:layout_marginLeft="20dp"
    android:gravity="center_horizontal"
    android:text="!!!For more details click here!!!"
    android:textColor="#ff0011"
    android:textColorLink="#ff00ff" />
    
</RelativeLayout>
</ScrollView>