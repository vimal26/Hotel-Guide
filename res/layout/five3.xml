<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/tv2"
        android:textSize="25sp"
        android:textStyle="italic|bold" 
        android:background="#eeeeee"/>
    <ImageView 
        android:layout_height="70dp"
         android:layout_width="70dp" 
         android:src="@drawable/theorchid"
          android:layout_below="@+id/ratingBar1" 
          android:layout_alignParentLeft="true" 
          android:id="@+id/imageView1"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView3"
        android:text="The O Golf Resort" />

    <Button 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:id="@+id/button4" 
        android:text="Le Meridien Pune" 
        android:layout_alignTop="@+id/imageView4" 
        android:layout_alignParentRight="true" 
        android:layout_alignBottom="@+id/imageView4" 
        android:layout_alignLeft="@+id/button3"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:text="The Orchid" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:src="@drawable/hyatt" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:src="@drawable/thegolf" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView3"
        android:src="@drawable/lemeridine" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:rating="5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView2"
        android:text="Hyatt Regency" />

<Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView5"
        android:text="@string/b2" />

<Button
    android:id="@+id/button5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/imageView5"
    android:layout_alignLeft="@+id/button4"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/button4"
    android:text="Hotel Ista" />

<ImageView
    android:id="@+id/imageView5"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/imageView4"
    android:src="@drawable/hotelista" />

</RelativeLayout>
</ScrollView>